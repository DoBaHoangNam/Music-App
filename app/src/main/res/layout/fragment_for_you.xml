<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentForYou">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/logoAnim"
            android:layout_width="@dimen/definite_dimen_60"
            android:layout_height="@dimen/definite_dimen_60"
            android:layout_marginStart="@dimen/definite_dimen_8"
            android:layout_marginTop="@dimen/definite_dimen_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/logo_loti" />

        <TextView
            android:id="@+id/tvExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginEnd="@dimen/definite_dimen_40"
            android:ellipsize="end"
            android:fontFamily="@font/sofia_pro_bold"
            android:maxLines="1"
            android:text="Music Dream"
            android:textSize="@dimen/text_size_xxnormal" />

        <ImageView
            android:id="@+id/icSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/definite_dimen_14"
            android:src="@drawable/baseline_settings_24" />

        <ImageView
            android:id="@+id/icSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/definite_dimen_14"
            android:src="@drawable/baseline_search_24" />


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/welcomeLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/retangle"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            >

            <TextView
                android:id="@+id/welcomeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/definite_dimen_30"
                android:fontFamily="@font/sofia_pro_bold"
                android:text="Good Morning"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/welcomeUserTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/definite_dimen_30"
                android:fontFamily="@font/sofiapro_light"
                android:text="Hoang Nam"
                android:textSize="@dimen/text_size_xnormal" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.5"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/statusLoti"
            android:layout_width="@dimen/definite_dimen_80"
            android:layout_height="@dimen/definite_dimen_80"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sun_loti"
            />
    </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/definite_dimen_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeLn"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/btnFunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/definite_dimen_10"
                android:layout_marginEnd="@dimen/definite_dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_small"
                    android:drawableStart="@drawable/icon_history"
                    android:fontFamily="@font/sofiapro_light"
                    android:paddingLeft="@dimen/definite_dimen_12"
                    android:text="History"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLastAdded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_small"
                    android:drawableStart="@drawable/icon_add"
                    android:fontFamily="@font/sofiapro_light"
                    android:paddingLeft="@dimen/definite_dimen_12"
                    android:text="Last Added"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/definite_dimen_10"
                android:layout_marginEnd="@dimen/definite_dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMostPlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_small"
                    android:drawableStart="@drawable/icon_trend"
                    android:fontFamily="@font/sofiapro_light"
                    android:paddingLeft="@dimen/definite_dimen_12"
                    android:text="Most played"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnShuffle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_small"
                    android:drawableStart="@drawable/icon_shuffle"
                    android:fontFamily="@font/sofiapro_light"
                    android:paddingLeft="@dimen/definite_dimen_12"
                    android:text="Shuffle"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggestion"
                android:layout_marginStart="@dimen/definite_dimen_12"
                android:layout_marginTop="@dimen/definite_dimen_12"
                android:textSize="@dimen/text_size_large"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recvSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/definite_dimen_10"
                android:layout_marginEnd="@dimen/definite_dimen_20"
                android:layout_marginTop="@dimen/definite_dimen_18"
                android:layout_marginBottom="@dimen/definite_dimen_10"/>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>